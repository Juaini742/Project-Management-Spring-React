<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<persistence xmlns="https://jakarta.ee/xml/ns/persistence"
             xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
             xsi:schemaLocation="https://jakarta.ee/xml/ns/persistence https://jakarta.ee/xml/ns/persistence/persistence_3_0.xsd"
             version="3.0">
    <persistence-unit name="default">
        <description>
            Persistence unit for the Jakarta Persistence tutorial of the Hibernate Getting Started Guide for more info
            https://docs.jboss.org/hibernate/orm/6.6/quickstart/html_single/
        </description>
<!--        <mapping-file>META-INF/customer_mapping.xml</mapping-file>-->

        <properties>
            <!-- Database connection settings -->
            <property name="jakarta.persistence.jdbc.url" value="jdbc:postgresql://localhost:5432/ecm-challenge" />
            <property name="jakarta.persistence.jdbc.user" value="postgres" />
            <property name="jakarta.persistence.jdbc.password" value="123" />

            <!-- Automatically export the schema -->
<!--            <property name="jakarta.persistence.schema-generation.database.action" value="update" />-->
            <property name="jakarta.persistence.schema-generation.database.action" value="update" />
<!--            <property name="hibernate.hbm2ddl.auto" value="create" />-->

            <!-- Echo all executed SQL to console -->
            <property name="hibernate.show_sql" value="true" />
            <property name="hibernate.format_sql" value="true" />
            <property name="hibernate.highlight_sql" value="true" />
        </properties>
    </persistence-unit>
</persistence>
